--- main menu
---
function menu_init() 
	t = 0

	_update = menu_update
	_draw = menu_draw

	-- music(1)
end

function menu_update()
	if btnp(4) then
		game_init()
	end
end

function menu_draw()
	cls(0)

	if t < 10
	then
		print("press z", 64-14 , 100, 6)
	else 
		if t == 10 + 5
		then t = 0 end
	end

	t += 1
end

---
--- game loops
